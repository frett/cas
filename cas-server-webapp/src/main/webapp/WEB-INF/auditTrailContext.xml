<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean
		id="eventListener"
		class="org.jasig.cas.event.EventListener">
		<property
			name="eventHandlers">
			<list>
				<bean
					class="org.jasig.cas.logging.events.AuthenticationLoggingEventHandler">
					<constructor-arg index="0" ref="loggingManager" />
				</bean>
				<bean
					class="org.jasig.cas.logging.events.TicketLoggingEventHandler">
					<constructor-arg index="0" ref="loggingManager" />
				</bean>
			</list>
		</property>
	</bean>
	
	<bean
		id="loggingManager"
		class="org.jasig.cas.logging.MultiThreadedLoggingManagerImpl">
		<constructor-arg index="0" ref="loggingDao" />
	</bean>
	
	<bean
		id="loggingDao"
		class="org.jasig.cas.logging.JdbcLoggingDaoImpl"
		p:dataSource-ref="loggingDataSource" />
	
	<bean
		id="loggingDataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource"
		p:driverClassName="com.mysql.jdbc.Driver"
		p:url="jdbc:mysql://localhost/cas"
		p:username="root"
		p:password="" />
</beans>
