<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="validators" class="java.util.ArrayList">
		<constructor-arg index="0">
			<list>
				<bean class="org.jasig.cas.validation.UsernamePasswordCredentialsValidator" />
			</list>
		</constructor-arg>
	</bean>

	<bean id="mbeanserver" class="org.springframework.jmx.support.MBeanServerFactoryBean">
		<property name="defaultDomain" value="cas" />
	</bean>

	<bean id="attributeSource" class="org.springframework.jmx.export.metadata.AttributesJmxAttributeSource">
		<property name="attributes"><bean class="org.springframework.metadata.commons.CommonsAttributes" /></property>
	</bean>

	<bean id="assembler" class="org.springframework.jmx.export.assembler.MetadataMBeanInfoAssembler" autowire="byType" />

	<bean id="mbeanadapter" class="org.springframework.jmx.export.MBeanExporter" autowire="byType">
		<property name="namingStrategy">
			<bean class="org.springframework.jmx.export.naming.MetadataNamingStrategy" autowire="byType" />
		</property>
    	<property name="beans">
	      	<map>
    	    	<entry key="cas:id=stats">
        	  		<ref bean="statsBean"/>
        		</entry>
			</map>
    	</property>
	</bean>

	<bean id="jmxconnector" class="org.springframework.jmx.support.ConnectorServerFactoryBean" autowire="byType">
		<property name="serviceUrl" value="service:jmx:jmxmp://localhost:9876" />
		<property name="threaded" value="true" />
		<property name="daemon" value="true" />
	</bean>

	<bean id="statsBean" class="org.jasig.cas.stat.support.TicketStatisticsImpl" />
	
	<bean id="logTicketStatisticsAfterReturningAdvice" class="org.jasig.cas.stat.advice.LogTicketStatisticsAfterReturningAdvice" autowire="byType">
        <property name="statsStateMutators">
            <props>
                <prop key="delegateTicketGrantingTicket">incrementNumberOfProxyGrantingTicketsVended</prop>
                <prop key="grantServiceTicket">incrementNumberOfServiceTicketsVended</prop>
                <prop key="createTicketGrantingTicket">incrementNumberOfTicketGrantingTicketsVended</prop>
                <prop key="">incrementNumberOfProxyTicketsVended</prop>
            </props>
        </property>
	</bean>
	
	<bean id="advisorAutoProxyCreator" class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator" />
	
	<bean id="logStatsAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<constructor-arg ref="logTicketStatisticsAfterReturningAdvice" />
		<property name="patterns">
			<list>
				<value>.*CentralAuthenticationService.*delegateTicketGrantingTicket.*</value>
				<value>.*CentralAuthenticationService.*grantServiceTicket.*</value>
				<value>.*CentralAuthenticationService.*createTicketGrantingTicket.*</value>
			</list>
		</property>
        <property name="perl5" value="false" />
	</bean>
</beans>
