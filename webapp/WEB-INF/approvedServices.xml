<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<!-- SERVICE REGISTRY -->
	<bean
		id="serviceRegistry"
		class="org.jasig.cas.services.DefaultServiceRegistry" />

	<!-- ADVICE -->
	<bean
		id="serviceAllowedMethodBeforeAdvice"
		class="org.jasig.cas.services.advice.ServiceAllowedMethodBeforeAdvice">
		<property
			name="serviceRegistry"
			ref="serviceRegistry" />
	</bean>
	
	<bean
		id="serviceRequiresAuthenticationMethodBeforeAdvice"
		class="org.jasig.cas.services.advice.ServiceRequiresAuthenticationMethodBeforeAdvice">
		<property
			name="serviceRegistry"
			ref="serviceRegistry" />
	</bean>
	
	<bean
		id="serviceAllowedToProxyMethodBeforeAdvice"
		class="org.jasig.cas.services.advice.ServiceAllowedToProxyMethodBeforeAdvice">
		<property
			name="ticketRegistry"
			ref="ticketRegistry" />
		<property
			name="serviceRegistry"
			ref="serviceRegistry" />
	</bean>

	<!-- ADVISE TO CHECK IF A SERVICE IS EVEN ALLOWED TO ACCESS THE SYSTEM -->
	<bean
		id="serviceAllowedMethodBeforeAdviceAdvisor"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<constructor-arg
			ref="serviceAllowedMethodBeforeAdvice" />
		<property
			name="patterns">
			<list>
				<value>.*CentralAuthenticationService.grantServiceTicket.*</value>
				<value>.*CentralAuthenticationService.validateServiceTicket.*</value>
			</list>
		</property>
        <property
        	name="perl5"
        	value="false" />
	</bean>
	
	<bean
		id="serviceRequiresAuthenticationMethodBeforeAdviceAdvisor"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<constructor-arg
			ref="serviceRequiresAuthenticationMethodBeforeAdvice" />
		<property
			name="patterns">
			<list>
				<value>.*CentralAuthenticationService.grantServiceTicket.*</value>
			</list>
		</property>
        <property
        	name="perl5"
        	value="false" />
	</bean>
	
	<bean id="serviceAllowedToProxyMethodBeforeAdviceAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<constructor-arg
			ref="serviceAllowedToProxyMethodBeforeAdvice" />
		<property
			name="patterns">
			<list>
				<value>.*CentralAuthenticationService.delegateTicketGrantingTicket.*</value>
			</list>
		</property>
        <property
        	name="perl5"
        	value="false" />
	</bean>
	
	<bean
		id="serviceRegistryJob"
		class="org.jasig.cas.services.support.SpringApplicationContextServiceRegistryReloader">
		<property
			name="serviceRegistryManager"
			ref=serviceRegistry"" />
	</bean>
	
	<bean
		id="jobDetailServiceRegistry"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property
			name="targetObject"
			ref="serviceRegistryJob" />
		<property
			name="targetMethod"
			value="reloadServiceRegistry" />
	</bean>
	
	<bean
		id="triggerJobDetailServiceRegistry"
		class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property
			name="jobDetail"
			ref="jobDetailServiceRegistry" />
		<property
			name="startDelay"
			value="20000" />
		<property
			name="repeatInterval"
			value="100000" />
	</bean>
	
	<bean
		id="scheduler2"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property
			name="triggers">
			<list>
				<ref
					local="triggerJobDetailServiceRegistry" />
			</list>
		</property>
	</bean>
</beans>