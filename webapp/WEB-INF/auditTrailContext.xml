<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean
		id="authenticationHandlerAfterReturningAdvice"
		class="org.jasig.cas.event.advice.AuthenticationHandlerAfterReturningAdvice" />

	<bean
		id="pageRequestHandlerInterceptorAdapter"
		class="org.jasig.cas.event.advice.PageRequestHandlerIntercepterAdapter" />
		
	<bean
		id="authenticationHandlerAfterReturningAdviceAdvisor"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<constructor-arg><ref local="authenticationHandlerAfterReturningAdvice" /></constructor-arg>
		<property name="patterns">
			<list>
				<value>.*AuthenticationHandler.authenticate.*</value>
			</list>
		</property>
        <property name="perl5">
            <value>false</value>
        </property>
	</bean>
</beans>
