<?xml version="1.0" encoding="UTF-8"?>
<project>
  <extend>${basedir}/../project.xml</extend>
  <pomVersion>3</pomVersion>
  <artifactId>cas-server-ldap</artifactId>
  <name>JA-SIG Central Authentication Service - LDAP AuthenticationHandlers</name>
  <siteDirectory></siteDirectory>
  <repository>
    <connection>scm:cvs:pserver:anonymous@developer.ja-sig.org:/home/cvs/jasig:cas</connection>
    <developerConnection>scm:cvs:pserver:${maven.username}@developer.ja-sig.org:/home/cvs/jasig:cas</developerConnection>
    <url>http://developer.ja-sig.org/source/viewrep/jasig/cas3/adaptors/ldap</url>
  </repository>
  
	<dependencies>
  		<dependency>
			<groupId>ldaptemplate</groupId>
			<artifactId>ldaptemplate</artifactId>
			<version>1.0-rc2</version>
			<type>jar</type>
			<url>http://ldaptemplate.sourceforge.net/</url>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>	
  	</dependencies>
  <build>
    <resources>
      <resource>
        <directory>${basedir}/../../</directory>
        <targetPath>META-INF</targetPath>
        <includes>
          <include>notice.txt</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
</project>

