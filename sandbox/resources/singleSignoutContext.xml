<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC  "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="ssoMap" class="java.util.HashMap" />
	
	<bean
	 id="monitorServiceTicketsAfterReturningAdvice" 
	 class="org.jasig.cas.services.advice.MonitorServiceTicketsAfterReturningAdvice"
	 autowire="byType">
	 	<property name="singleSignoutMapping" ref="ssoMap" />
	</bean>
	
	<bean
	 id="callbackServicesOnTicketGrantingTicketDestructionAfterReturningAdvice"
	 class="org.jasig.cas.services.advice.CallbackServicesOnTicketGrantingTicketDestructionAfterReturningAdvice"
	 autowire="byType">
	 	<property name="singleSignoutMapping" ref="ssoMap" />
	</bean>
	
	<bean id="monitorServiceTicketsAfterReturningAdviceAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<constructor-arg ref="monitorServiceTicketsAfterReturningAdvice" />
		<property name="patterns">
			<list>
				<value>.*TicketRegistry.*addTicket.*</value>
			</list>
		</property>
        <property name="perl5" value="false" />
	</bean>
	
	<bean
	 id="callbackServicesOnTicketGrantingTicketDestructionAfterReturningAdviceAdvisor"
	 class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<constructor-arg ref="callbackServicesOnTicketGrantingTicketDestructionAfterReturningAdvice" />
		<property name="patterns">
			<list>
				<value>.*TicketRegistry.*deleteTicket.*</value>
			</list>
		</property>
        <property name="perl5" value="false" />
	</bean>
</beans>
