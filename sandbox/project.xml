<?xml version="1.0" encoding="UTF-8"?>
<project>
	<extend>${basedir}/../project.xml</extend>
	<pomVersion>3</pomVersion>
	<artifactId>cas-server-sandbox</artifactId>
	<name>JA-SIG Central Authentication Service - Adaptors</name>
	<groupId>cas</groupId>
	<repository>
		<connection>scm:cvs:pserver:anonymous@uportal.org:/home/cvs/jasig:cas</connection>
		<developerConnection>scm:cvs:pserver:${maven.username}@uportal.org:/home/cvs/jasig:cas</developerConnection>
		<url>http://www.uportal.org/cgi-bin/viewcvs.cgi/cas3/adaptors/</url>
	</repository>
	<dependencies>
		<dependency>
			<groupId>cas</groupId>
			<artifactId>cas-server</artifactId>
			<version>3.0.5-SNAPSHOT</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		
		<!-- for SAML views -->
		<dependency>
			<groupId>opensaml</groupId>
			<artifactId>opensaml</artifactId>
			<version>1.1</version>
			<type>jar</type>
			<url>http://www.opensaml.org</url>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		
		<!--  JBOSS CACHE DEPENDENCIES -->
		<dependency>
			<groupId>concurrent</groupId>
			<artifactId>concurrent</artifactId>
			<version>1.3.4</version>
			<type>jar</type>
			<url>http://gee.cs.oswego.edu/dl/classes/EDU/oswego/cs/dl/util/concurrent/intro.html</url>
		</dependency>
		
		<dependency>
			<groupId>trove</groupId>
			<artifactId>trove</artifactId>
			<version>1.0.2</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-common</artifactId>
			<version>4.0.3</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-j2ee</artifactId>
			<version>4.0.3</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-jmx</artifactId>
			<version>4.0.3</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-serialization</artifactId>
			<version>1.0.0RC1</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-cache</artifactId>
			<version>1.4.0.CR2</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-minimal</artifactId>
			<version>4.0.3</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-system</artifactId>
			<version>4.0.3</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>jgroups</groupId>
			<artifactId>jgroups</artifactId>
			<version>2.2.9.2</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>jdbm</groupId>
			<artifactId>jdbm</artifactId>
			<version>1.0</version>
			<type>jar</type>
		</dependency>
	</dependencies>
	<build>
		<nagEmailAddress>scott_battaglia@rutgers.edu</nagEmailAddress>
		<sourceDirectory>${basedir}/src/main/java</sourceDirectory>
		<unitTestSourceDirectory>${basedir}/src/test/java</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Tests.java</include>
			</includes>
			<excludes>
				<exclude>**/Abstract*Tests.java</exclude>
			</excludes>
			<resources>
				<resource>
					<directory>${basedir}/src/test/resources</directory>
					<includes>
						<include>**/**</include>
						<include>**/*.txt</include>
					</includes>
					<excludes>
						<exclude>**/*.java</exclude>
					</excludes>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>${rootdir}</directory>
				<targetPath>META-INF</targetPath>
				<includes>
					<include>notice.txt</include>
				</includes>
				<filtering>false</filtering>
			</resource>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>**/**</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>
	</build>
</project>