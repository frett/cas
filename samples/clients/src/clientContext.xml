<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context for the remote OrderService client.
	- Defines various OrderService proxies to be called by OrderServiceClient.
	-->
<beans>
	<!-- Resolves ${...} placeholders from client.properties -->
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"><value>client.properties</value></property>
	</bean>
	
	
	<!-- Proxy for the JAX-RPC/Axis-exported OrderService -->
	<bean id="jaxRpcProxy" class="org.springframework.remoting.jaxrpc.JaxRpcPortProxyFactoryBean">
		<property name="serviceFactoryClass">
			<value>org.apache.axis.client.ServiceFactory</value>
		</property>
		<property name="wsdlDocumentUrl">
			<value>http://${serverName}:${httpPort}${contextPath}/services/CentralAuthenticationService?wsdl</value>
		</property>
		<property name="namespaceUri">
			<value>http://${serverName}:${httpPort}${contextPath}/services/CentralAuthenticationService</value>
		</property>
		<property name="serviceName">
			<value>JaxRpcCentralAuthenticationServiceService</value>
		</property>
		<property name="servicePostProcessors">
			<list>
				<bean class="org.jasig.cas.remoting.client.NestedJavaBeanMappingServicePostProcessor">
					<property name="namespace">
						<value>urn:CentralAuthenticationService</value>
					</property>
					<property name="javaBeans">
						<list>
							<value>org.jasig.cas.authentication.principal.UsernamePasswordCredentials</value>
							<value>org.jasig.cas.authentication.principal.SimplePrincipal</value>
							<value>org.jasig.cas.authentication.SimpleService</value>
							<value>org.jasig.cas.authentication.Cas20ProtocolAuthenticationSpecification</value>
							<value>org.jasig.cas.validation.AssertionImpl</value>
							<value>org.jasig.cas.ticket.ExpirationPolicy</value>
						</list>
					</property>
				</bean>
			</list>
		</property>
		<property name="portName">
			<value>CentralAuthenticationService</value>
		</property>
		<property name="serviceInterface">
			<value>org.jasig.cas.CentralAuthenticationService</value>
		</property>
	</bean>	
</beans>
